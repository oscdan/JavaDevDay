<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight=".25"
        android:background="@color/blue_detail">

        <ImageView
            android:id="@+id/activity_speakers_detail_image"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/speakerdetail_image_height" />

    </LinearLayout>
    
    <ScrollView
        android:layout_width="0dp"
        android:layout_weight=".75"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:scrollbarStyle="outsideOverlay"
        android:background="@color/gray_background"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/activity_speakers_detail_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/black_detail"/>

    </ScrollView>

</LinearLayout>