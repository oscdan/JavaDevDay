<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alphaws.com.javadevday"
    android:versionName="1.0.0"
    android:versionCode="2">

    <uses-sdk android:minSdkVersion="17"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".gui.ActivitySpeakers"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_speakers" >
        </activity>
        <activity
            android:name=".gui.ActivityEventDetail"
            android:label="Java Dev Day 2015"
            android:parentActivityName=".gui.ActivityFavourites"
            android:theme="@style/AppThemeDetail" >
        </activity>
        <activity
            android:name=".gui.ActivitySpeakersDetail"
            android:label="Java Dev Day 2015"
            android:parentActivityName=".gui.ActivitySpeakers"
            android:theme="@style/AppThemeDetail" >
        </activity>
        <activity
            android:name=".gui.ActivitySplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/AppFullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.ActivityFavourites"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_favourites" >
        </activity>
        <activity
            android:name=".gui.ActivityMain"
            android:screenOrientation="portrait"
            android:label="@string/section_agenda" >
        </activity>
    </application>

</manifest>
